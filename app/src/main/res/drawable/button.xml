<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#f7f7f7"
                android:startColor="#cfcfcf" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#9c9e9e"
                android:startColor="#434343" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>